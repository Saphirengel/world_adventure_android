<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1028dp"
        android:layout_height="766dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hintergrund"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="2dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_werte_name"
        android:layout_width="228dp"
        android:layout_height="253dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:textColorHint="#FFEB3B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/wert_staerke"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Stärke"
            android:textColor="#FFEB3B"
            android:textColorHighlight="#FFEB3B"
            android:textColorHint="#FFEB3B"
            android:textColorLink="#FFEB3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/wert_geschicklichkeit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Geschicklichkeit"
            android:textColor="#FFEB3B"
            android:textColorHighlight="#FFEB3B"
            android:textColorHint="#FFEB3B"
            android:textColorLink="#FFEB3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/wert_intelligenz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Intelligenz"
            android:textColor="#FFEB3B"
            android:textColorHint="#FFEB3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/wert_konstitution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Konstitution"
            android:textColor="#FFEB3B"
            android:textColorHint="#FFEB3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/wert_weisheit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Weisheit"
            android:textColor="#FFEB3B"
            android:textColorHint="#FFEB3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/wert_charisma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Charisma"
            android:textColor="#FFEB3B"
            android:textColorHint="#FFEB3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/wert_glueck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Glück"
            android:textColor="#FFEB3B"
            android:textColorHint="#FFEB3B"
            android:textSize="24sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_werte_zahl"
        android:layout_width="80dp"
        android:layout_height="195dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/text_werte_name"
        app:layout_constraintTop_toTopOf="@+id/imageView">

        <TextView
            android:id="@+id/wert_staerke_zahl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/wert_geschicklichkeit_zahl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/wert_intelligenz_zahl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/wert_konstitution_zahl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/wert_weisheit_zahl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/wert_charisma_zahl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/wert_glueck_zahl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/rg_gesinnung"
        android:layout_width="348dp"
        android:layout_height="441dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/text_werte_zahl"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rb_rgut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Rechtschafend Gut"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rb_gut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Gut"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rb_chgut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Chaotisch Gut"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rb_rneutral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Rechtschafend Neutral"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rb_neutral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Neutral"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rb_chneutral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Chaotisch Neutral"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rb_rboese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Rechtschafend Böse"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rb_boese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Böse"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rb_chboese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Chaotisch Böse"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />
    </RadioGroup>

    <EditText
        android:id="@+id/ed_char_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:fontFamily="@font/bridgnorth_regular"
        android:hint="Name"
        android:inputType="text"
        android:textColor="#FFEB3B"
        android:textColorHint="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/rg_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rg_gesinnung"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rb_mann"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Mann"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rb_frau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bridgnorth_regular"
            android:text="Frau"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />
    </RadioGroup>

    <Spinner
        android:id="@+id/sp_oberrasse"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_werte_name" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_oberrasse" />

</androidx.constraintlayout.widget.ConstraintLayout>