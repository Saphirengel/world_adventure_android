<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1028dp"
        android:layout_height="766dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hintergrund"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="2dp" />

    <LinearLayout
        android:layout_width="274dp"
        android:layout_height="242dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView">

        <Button
            android:id="@+id/b_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            app:iconTint="#673AB7" />

        <Button
            android:id="@+id/b_laden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laden" />

        <Button
            android:id="@+id/b_character_erstellen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charakter erstellen" />

        <Button
            android:id="@+id/b_optionen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Optionen" />

        <Button
            android:id="@+id/b_beenden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beenden" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>